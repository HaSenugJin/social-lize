{{> admin/layout/header}}
<body>
<main role="main">
    <section id="section n1">
        {{> admin/layout/sidebar}}
        <div class="content-page">
            <div class="content-tab-bar">
                <ul class="tab-nav">
                    <li class="tab-link"><a href="/admin/user/userListForm.html">회원</a></li>
                    <li class="tab-link"><a href="/admin/social/socialListForm.html">소셜</a></li>
                    <li class="tab-link current"><a href="/admin/board/boardListForm.html">게시글</a></li>
                    <li class="tab-link"><a href="/admin/social/socialCategoryListForm.html">카테고리</a></li>
