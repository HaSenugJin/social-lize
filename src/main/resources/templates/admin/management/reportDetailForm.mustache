{{> admin/layout/header}}
<body>
<main role="main">
    <section id="section n1">
        {{> admin/layout/sidebar}}
        <div class="content-page">
            <div class="content-tab-bar">
                <div class="tab-content current">
                    <div class="tab-head">
                        <p>신고 상세보기</p>
                    </div>
                    <div class="tab-item company stay">
                        <ul class="review-table">
                            <li>
                                <div class="review-detail-head">
                                    <h3>신고 상세</h3>
                                    <div class="review-content">
                                        <div class="review-user-info">
                                            <span>작성자 : {{reportDetail.userNickname}}</span>
                                            <span>작성일자 : {{reportDetail.createdAt}}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="report-header">
                                    <h3>신고 사유</h3>
                                </div>
                                <p class="reply-icon black">게시글</p>
                                <div class="review-content-reply">{{reportDetail.reportBoard.content}}</div>
                                <div class="review-user-info">
                                    <span>작성자 : {{reportDetail.reportBoard.userNickname}}</span>
                                    <span>작성일자 : {{reportDetail.reportBoard.createdAt}}</span>
                                </div>
                                <div class="review-content">
                                    <div class="reply-content">
                                        <p class="reply-icon">신고 사유</p>
                                        <div class="reply-user-info">
                                            <span>작성자 : {{reportDetail.userNickname}}</span>
                                            <div class="review-content-reply">{{reportDetail.content}}</div>
                                        </div>
                                        <div></div>
                                    </div>
                                </div>
                                <div class="buttons">
                                    <div class="button-wrapper" style="margin-right: 3px">
                                        <form action="/admin/report/{{reportDetail.id}}/approval" method="post">
                                            <button type="submit" class="btn approval">적합</button>
                                        </form>
                                    </div>
                                    <div class="button-wrapper">
                                        <form action="/admin/report/{{reportDetail.id}}/refuse" method="post">
                                            <button type="submit" class="btn refuse">부적합</button>
                                        </form>
                                    </div>
                                    <div class="button-wrapper">
                                        <a class="btn black" href="/admin/report-list">목록보기</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </section>
</main>
<script>

</script>
</body>

</html>