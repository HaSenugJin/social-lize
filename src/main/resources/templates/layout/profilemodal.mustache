<div class="modal-overlay">
    <div class="modal">
        <div class="modal-date">2024년 6월 14일 가입</div>
        <span class="close">&times;</span>
        <img src="images/userprofile.png" alt="Profile Picture">
        <div class="modal-content">
            <h3>김세운</h3>
            <div class="actions">
                <div>
                    <button><i class="fas fa-paper-plane"></i></button>
                    <span>쪽지보내기</span>
                </div>
                <div>
                    <button><i class="fas fa-file-alt"></i></button>
                    <span>작성글 보기</span>
                </div>
            </div>
        </div>
        <div class="menu-button">
            <div></div>
            <div></div>
            <div></div>
        </div>
        <div class="dropdown-menu">
            <a href="#" id="force-exit">강제퇴장시키기</a>
            <a href="#" id="report">신고하기</a>
        </div>
    </div>
</div>

<script>
    document.querySelector('.close').addEventListener('click', function() {
        document.querySelector('.modal-overlay').style.display = 'none';
    });

    document.querySelector('.menu-button').addEventListener('click', function() {
        document.querySelector('.dropdown-menu').style.display = 'block';
    });

    document.querySelector('#force-exit').addEventListener('click', function() {
        alert('강제퇴장시켰습니다.');
    });

    document.querySelector('#report').addEventListener('click', function() {
        alert('신고되었습니다.');
    });

    document.addEventListener('click', function(event) {
        if (!event.target.closest('.menu-button') && !event.target.closest('.dropdown-menu')) {
            document.querySelector('.dropdown-menu').style.display = 'none';
        }
    });
</script>
